<footer class="footer">
  <nav class="footer__nav">
    {% for item in footer_nav.get_items %}
      <a
        class="footer__nav-link"
        {% if item.is_external %}
          href="{{item.link}}"
          target="_blank"
          rel="noopener"
        {% else %}
          href="{{item.link|relative}}"
        {% endif %}
      >
        <span>{{item.title}}</span>
      </a>
    {% endfor %}
  </nav>
  <ul class="footer__social">
    <li class="footer__social-item">
      <a class="footer__social-link" href="/" target="_blank" rel="noopener">
        {% include 'icon-facebook.twig' %}
      </a>
    </li>
    <li class="footer__social-item">
      <a class="footer__social-link" href="/" target="_blank" rel="noopener">
        {% include 'icon-twitter.twig' %}
      </a>
    </li>
    <li class="footer__social-item">
      <a class="footer__social-link" href="/" target="_blank" rel="noopener">
        {% include 'icon-medium.twig' %}
      </a>
    </li>
  </ul>  
  <p class="footer__copyright">Â© Spotted. All Rights Reserved.</p>
</footer>